<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/navigation_home">
    <fragment
        android:id="@+id/navigation_home"
        android:name="edu.uw.tcss450team2client.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_secondHomeFragment"
            app:destination="@id/secondHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="edu.uw.tcss450team2client.ui.chat.ChatFragment"
        android:label="@string/title_chat_room"
        tools:layout="@layout/fragment_chat">
        <!--
        <argument
            android:name="chatroom"
            app:argType="edu.uw.tcss450team2client.ui.chat.ChatRoom" />
            -->
        <argument
            android:name="chatID"
            app:argType="integer" />
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/navigation_contacts"
        android:name="edu.uw.tcss450team2client.ui.contacts.ContactsFragment"
        android:label="@string/title_contacts"
        tools:layout="@layout/fragment_contacts" />
    <fragment
        android:id="@+id/navigation_weather"
        android:name="edu.uw.tcss450team2client.ui.weather.WeatherFragment"
        android:label="@string/title_weather"
        tools:layout="@layout/fragment_weather" />
    <fragment
        android:id="@+id/secondHomeFragment"
        android:name="edu.uw.tcss450team2client.ui.home.SecondHomeFragment"
        android:label="@string/title_second_home"
        tools:layout="@layout/fragment_second_home" />
    <fragment
        android:id="@+id/navigation_chat"
        android:name="edu.uw.tcss450team2client.ui.chat.ChatListFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chat_list" >
        <action
            android:id="@+id/action_navigation_chat_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="edu.uw.tcss450team2client.ui.settings.ChangePasswordFragment"
        android:label="ChangePasswordFragment"
        android:layout="@layout/fragment_settings_changepassword" >
        <argument
            android:name="email"
            app:argType="string"
            android:defaultValue="default" />
    </fragment>
</navigation>